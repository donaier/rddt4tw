#posts

- @posts.each_with_index do |post, index|

  :javascript

    $("<img/>").attr("src", "#{Post.image_link(post)}").load(function(){
      ratio = this.width / this.height

      window.photos.push({
        src:"#{Post.image_link(post)}",
        ratio:ratio
      });

      $(window).trigger('resize');
    }); 
